  <meta property="og:site_name" content="Home Group 2025">
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ title }} | Home Group 2025">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:image" content="https://rgcvthomegroup.netlify.app/assets/img/og.png">

