<head>
  <!-- Base meta tags -->
  <meta charset="UTF-8">
  <title>
    {{ title }}
    | Home Group 2025
  </title>
  <meta name="language" content="english">
  <meta name="description" content="{{ description }}">

  <!-- Reassure the browser that we are mobile-friendly -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
